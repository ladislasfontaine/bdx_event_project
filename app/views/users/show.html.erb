<h1>Profil</h1>
<p>Mes informations :</p>

<ul>
  <li><%= @user.first_name %></li>
  <li><%= @user.last_name %></li>
  <li><%= @user.email %></li>
  <li><%= @user.description %></li>
</ul>

<%= link_to 'Modifier email ou mot de passe', edit_user_registration_path %><br>
<%= link_to 'Modifier mes informations', edit_user_path(@user.id) %>

<hr>

<% @user.events.each do |event| %>
  <div class="event-element">
    <%= event.title %>
    <%= link_to 'Voir', event_path(event.id) %>
  </div>
<% end %>
